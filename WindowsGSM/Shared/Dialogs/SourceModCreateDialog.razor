<MudDialog>
    <DialogContent>
        <MudForm @ref="_form" Style="padding-right: 12px; max-height: 500px; overflow-y: scroll">
            <MudSelect @bind-Value="@_version" Label="Select the version" HelperText="@($"{@_versions.Count} versions available")" Variant="Variant.Outlined">
                @foreach (string version in _versions)
                {
                    <MudSelectItem Value="@version">
                        @version

                        @if (version == _versions[0])
                        {
                            <span>&nbsp;(Stable)</span>
                        }
                    </MudSelectItem>
                }
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Install</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public IMod Mod { get; set; } = null!;

    private MudForm _form = null!;
    private List<string> _versions = new();
    private string _version = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _versions = await Mod.GetVersions();
        _version = _versions[0];
    }

    private async Task Submit()
    {
        await _form.Validate();

        if (_form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(_version));
        }
        else
        {
            foreach (string error in _form.Errors)
            {
                //Snackbar.Add($"Create Server: {error}", Severity.Error);
            }
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
